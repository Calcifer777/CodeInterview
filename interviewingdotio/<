 
# Given a Set of numbers, find and return the 3rd smallest number

from random import randint 



def find_n_smallest(s, n):
	if n > len(s):
		return None

	x0 = s.pop()
	smaller = set(x for x in s if s < x0)
	larger = set(x for x in s if >= x0)

	if len(smaller) > n-1:
		return find_n_smallest(smaller, n)
	elif len(smaller) = n-1:
		return x0
	elif len(smaller) < n-1:
		return find_n_smallest(larger, n-len(larger)
	else:
		assert False, 'branch should not be reached'


num_elements = 50
n = 4
s = set([randint(1, 50) for i in range(num_elements)])

print(s)

print('Sorted set:', list(s).sort())
print('N:', n)
print('Result:', find_n_smallest(s, n))

